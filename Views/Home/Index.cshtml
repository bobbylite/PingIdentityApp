@{
    ViewData["Title"] = "GetChatty Self Service Portal";
}

<div class="d-flex flex-column justify-content-center align-items-center bg-white">
    <div class="text-center p-5 rounded-4 bg-white">
        <img src="/images/GetChattyLogo.png" alt="GetChatty Logo" class="mb-4" style="width: 140px;" />

        <h1 class="display-5 fw-bold text-dark mb-3">GetChatty Portal</h1>
        <p class="lead text-secondary mb-4">
            Manage your account, access tools, and connect securely with <strong>GetChatty Ltd.</strong>
        </p>

        <a class="btn btn-lg btn-danger px-5 py-3 rounded-pill fw-semibold"
           href="/account/login">
            <i class="bi bi-shield-lock-fill me-2"></i> Sign in with GetChatty
        </a>

        <p class="mt-4 text-muted small">
            Powered by PingIdentity
        </p>
    </div>

    <footer class="mt-5 text-center text-muted small">
        <p class="mb-0">&copy; @DateTime.Now.Year GetChatty Ltd. All rights reserved.</p>
    </footer>
</div>
